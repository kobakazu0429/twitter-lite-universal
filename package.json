{
  "name": "twitter-lite-universal",
  "version": "2.0.0",
  "description": "A tiny, full-featured, universal, flexible client / server library for the Twitter API",
  "source": "twitter.js",
  "main": "dist/twitter.js",
  "module": "dist/twitter.m.js",
  "types": "index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "repository": "kobakazu0429/twitter-lite-universal",
  "homepage": "https://github.com/kobakazu0429/twitter-lite-universal",
  "author": "Peter Piekarczyk <peter@peterp.me>",
  "contributors": [
    "Dan Dascalescu (https://github.com/dandv)",
    "kobakazu0429 (https://github.com/kobakazu0429)"
  ],
  "license": "MIT",
  "keywords": [
    "twitter",
    "rest",
    "api",
    "twitter api",
    "node-twitter",
    "twitter oauth",
    "twitter rest",
    "twitter stream"
  ],
  "dependencies": {
    "crypto-js": "^4.1.1",
    "oauth-1.0a": "^2.2.4"
  },
  "devDependencies": {
    "@size-limit/file": "^8.1.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^18.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-jest": "^23.8.2",
    "husky": "^7.0.1",
    "jest": "^25.5.0",
    "microbundle": "^0.15.0",
    "size-limit": "^8.1.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "lint": "eslint . && tsc index.d.ts",
    "fix": "eslint --fix .",
    "build": "microbundle {stream,twitter}.js",
    "size": "size-limit",
    "test": "jest --detectOpenHandles && yarn size",
    "release": "npm run -s build && npm run lint && npm test && git tag $npm_package_version && git push && git push --tags && npm publish",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "size-limit": [
    {
      "path": "dist/twitter.umd.js",
      "limit": "3 kB",
      "brotli": true
    },
    {
      "path": "dist/stream.umd.js",
      "limit": "3 kB",
      "brotli": true
    },
    {
      "path": "index.d.ts",
      "limit": "3 kB",
      "brotli": true
    }
  ]
}
